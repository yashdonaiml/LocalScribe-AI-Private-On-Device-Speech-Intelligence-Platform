# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must use LF line endings
*.sh text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# DevContainer config
devcontainer.json text eol=lf

# Python files
*.py text eol=lf

# Keep Windows batch files with CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
